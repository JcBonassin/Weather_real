		<![endif]-->

	</head>


	<body>
		<div class="container">
			<div class="flash" onclick=delete_flash(this)>
		   <% if flash[:message] %>
		   <h3 style="color:white;"><%=flash[:message]%> <button class="close-button" aria-label="Close alert" type="button" data-close><span aria-hidden="true">&times;</span></button></h3>
      	   <% end %>
      	   <% if flash[:errors] %>		 
           <h3 style="color:red;"><%=flash[:errors]%> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></h3>
      	   <% end %>
			 </div>
		</div>

       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
       <script>
           function delete_flash(flash){
               $(flash).parent().remove()
           }
       </script>

	<style>
	.flash {
  	float: left;
	width: 75%;
	padding-top: 25px;
	}
	.flash  h3 { margin-top: 0; color: #fff; }
	.flash  p { opacity: 0.8; color: #fff; }
}

</style>


		<%= yield %>
			</footer> <!-- .site-footer -->
		</div>

		<footer class="branding">
